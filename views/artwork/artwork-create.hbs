<h2>Create a new Artwork</h2>
<form action="/artwork/create" method="POST">
    <label>Artwork</label>
    <input id="imageURL" type="text" name="imageURL"/>
    <br>
    <br>
    <label>Title</label>
    <input id="title" type="text" name="title"/>
    <br>
    <br>
    <label for="artists">Artists</label>
    <select name="artists" id="artists" multiple>
        {{#each artists}}
            <option value="{{_id}}">{{name}}</option>
        {{/each}}
    </select>
    <br>
    <br>
    <label>History</label>
    <input id="story" type="text" name="story"/>
    <br>
    <br>
    <label>Mood</label>
    <select name="mood" id="mood" multiple>
        <option value="abstract">abstract</option> 
        <option value="happy">happy</option> 
        <option value="material">material</option>  
        <option value="other">other</option>       
    </select>
    <br>
    <br>
    <label>Date</label>
    <input id="dateOfCompletion" type="date" name="date"/>
    <br>
    <br>
    <button type="submit">Add new Artwork</button>
</form>