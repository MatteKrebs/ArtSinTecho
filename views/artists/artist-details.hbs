
<h3>Artist Details</h3>
<br>
<br>
<br>
    {{artist.pic}}
    <h5>Name: {{artist.name}}</h5>
    <br>
    City: {{artist.city}}
    <br>
    <br>
    Art type: {{artist.artType}}
    <br>
    <br> 
    Description: {{artist.description}}  
    <br>
    <br>
    <br> 
    <h5>Artwork from this Artist:</h5>
    <br>
          {{#each artist.works}}
            <option value="{{_id}}">{{title}}</option>
          {{/each}}

    <br>

{{#if isAdmin}}

<form action="/artists/{{artist._id}}/edit" method="GET">
     <button type="submit">Edit Artist</button>
</form>
<br>
<form action="/artists/{{artist._id}}/delete" method="POST">
     <button type="submit">Delete Artist</button>
</form>

{{/if}}